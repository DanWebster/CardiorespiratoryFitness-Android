<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <org.researchstack.backbone.ui.views.StepSwitcher
        android:id="@+id/crf_active_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <android.support.v7.widget.Toolbar
        style="@style/Widget.Crf.Toolbar.Transparent"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/crf_toolbar_top_padding"
        android:background="@drawable/crf_toolbar_background">

        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:id="@+id/toolbar_progress_bar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/crf_progress_bar_height"
            android:layout_gravity="center"
            android:progressDrawable="@drawable/crf_progress_bar"
            android:indeterminate="false"
            android:max="10"
            android:progress="5"/>

    </android.support.v7.widget.Toolbar>

</RelativeLayout>